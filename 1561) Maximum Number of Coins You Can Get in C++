class Solution {
public:
    int maxCoins(vector<int>& piles) {
        sort(piles.begin(),piles.end());
        int cnt=0;
        int left=0;
        int right=piles.size()-1;
        int right_before=right-1;
        while(left<right_before){
            cnt+=piles[right_before];
            left++;
            right_before=right_before-2;
            right=right-2;
        }
        return cnt;
    }
};
